<%= render 'sales/sales_header' , sale: @sale %>

<div class="container">
  <div class="cover">
  <div class="cover-inner">
    <div class="cover-contents">
      <h2>セールスログイン</h2>

  <div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'z' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "ログイン", class: "btn btn-lg btn-primary" %>

    <% end %>

    <p><%= link_to "新規会員登録はこちらから", signup_path %></p>
  </div>
  </div>
    </div>
  </div>
  </div>
</div>

<%= render 'sales/sales_footer' , sale: @sale %>